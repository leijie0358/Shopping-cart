/****************************** Gallery styles *********************************************/

#advgallery
{
	/* CSS3 Box Shadow */
	-moz-box-shadow:0 0 3px #AAAAAA;
	-webkit-box-shadow:0 0 3px #AAAAAA;
	box-shadow:0 0 3px #AAAAAA;
	
	/* CSS3 Rounded Corners */
	
	-moz-border-radius-bottomleft:4px;
	-webkit-border-bottom-left-radius:4px;
	border-bottom-left-radius:4px;
	
	-moz-border-radius-bottomright:4px;
	-webkit-border-bottom-right-radius:4px;
	border-bottom-right-radius:4px;
	
	text-align:center;
	border:1px solid white;
	background:url(panel.jpg) repeat-x bottom center #ffffff;
	padding:0px;
	/* The width of the gallery */
	width:798px;
	overflow:hidden;
}

#slides
{
	/* This is the slide area */
	height:120px;
	
	/* jQuery changes the width later on to the sum of the widths of all the slides. */
	width:798px;
	overflow:hidden;
}

#slides img
{
	margin:0px;
	width:798px;
	height:120px;
}

.slide
{
	float:left;
}

#advmenu
{
	/* This is the container for the thumbnails */
	height:25px;
}

#advmenu ul
{
	margin:0px;
	padding:0px;
}

#advmenu li
{
	/* Every thumbnail is a li element */
	width:60px;
	display:inline-block;
	list-style:none;
}

#advmenu li.inact:hover
{
	/* The inactive state, highlighted on mouse over */
	background:url(pic_bg.png) repeat;
}

#advmenu li.act,li.act:hover
{
	/* The active state of the thumb */
	background:url(active_bg.png) no-repeat;
}

#advmenu li.act a
{
	cursor:default;
}

.fbar
{
	/* The left-most vertical bar, next to the first thumbnail */
	width:2px;
	background:url(divider.png) no-repeat right;
}

#advmenu li a
{
	display:block;
	background:url(divider.png) no-repeat right;
	height:25px;
	margin:0px;
	padding-top:8px;
	font-size:8px;
}

#advmenu a img
{
	border:none;
}